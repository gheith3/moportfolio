# Mo Portfolio - Production Environment Variables
# Copy this to .env.prod and fill in the values
# In Portainer, set these as environment variables in the stack configuration

# Application
APP_PORT=8900
APP_URL=https://moportfolio.com
APP_KEY=base64:your-generated-key-here

# Database (Required)
DB_DATABASE=mo_portfolio
DB_USERNAME=mo_portfolio_user
DB_PASSWORD=your-secure-password
DB_ROOT_PASSWORD=your-secure-root-password

# Redis (Optional)
REDIS_PASSWORD=

# Migrations (set to true on first deploy or when schema changes)
RUN_MIGRATIONS=false

# Data storage path (bind mount for persistent data outside containers)
DATA_PATH=./data
